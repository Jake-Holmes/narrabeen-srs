<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.avatarmind.robotmotion">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">

        </activity>
        <activity
            android:name=".MotorsActivity"
            android:label="@string/title_activity_motors"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".HeadActivity"
            android:label="@string/title_activity_head"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".WheelActivity"
            android:label="@string/title_activity_wheel"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".EmojiActivity"
            android:label="@string/title_activity_emoji"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".HasBooking"
            android:label="You have a booking"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".HasValidBooking"
            android:label="You have a valid booking."
            android:screenOrientation="landscape">
    </activity>
        <activity
            android:name=".TableUsherActivity"
            android:label="Ushering to your table"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".SRSMainActivity"
            android:label="Smart Restaurant System"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NoBookingActivity"
            android:label="Make a booking"
            android:screenOrientation="landscape"/>
    </application>

</manifest>