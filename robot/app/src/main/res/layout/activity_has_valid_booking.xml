<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HasValidBooking">

    <TextView
        android:id="@+id/Title"
        android:layout_width="317dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="160dp"
        android:fontFamily="sans-serif"
        android:text="We found your booking details"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="56dp" />

    <TextView
        android:id="@+id/firstNameTV"
        android:layout_width="150dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/Title"
        android:layout_alignBottom="@+id/lastNameTV"
        android:layout_marginStart="-160dp"
        android:layout_marginBottom="94dp"
        android:text="First Name"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/lastNameTV"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="135dp"
        android:text="Last Name"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="127dp" />

    <TextView
        android:id="@+id/FNameEntered"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@+id/firstNameTV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="13dp"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/LNameEntered"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="38dp"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="127dp" />

    <TextView
        android:id="@+id/TableID"
        android:layout_width="148dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="195dp"
        android:text="TableID:"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="168dp" />

    <TextView
        android:id="@+id/TableIDLabel"
        android:layout_width="149dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="197dp"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="168dp" />

    <Button
        android:id="@+id/usherStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="42dp"
        android:text="Start Ushering" />
</RelativeLayout>