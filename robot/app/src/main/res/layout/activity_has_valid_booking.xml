<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BlackColor"
    tools:context=".HasValidBooking">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="10dp"
                android:text="Booking details found successfully"
                android:textAlignment="center"
                android:textColor="#ce2c38"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/firstNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="10dp"
                    android:text="First Name"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:textAlignment="textStart"
                    android:textColor="#ce2c38"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/FNameEntered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textColor="#ce2c38"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/lastNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="10dp"
                    android:text="Last Name"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:textAlignment="textStart"
                    android:textColor="#ce2c38"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/LNameEntered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textColor="#ce2c38"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/TableID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="10dp"
                    android:text="TableID"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:textAlignment="textStart"
                    android:textColor="#ce2c38"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TableIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textColor="#ce2c38"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/usherStart"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginTop="118dp"
                android:layout_marginEnd="0dp"
                android:text="Start Ushering"
                android:onClick="startUshering"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>